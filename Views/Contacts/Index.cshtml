@model IEnumerable<KhumaloCraft_Part2.Models.Contact>

@{
    ViewData["Title"] = "Feedback";
}

<h1 style="color: #F96D00">Feedback</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>@Html.DisplayNameFor(model => model.Subject)</th>
            <th>@Html.DisplayNameFor(model => model.Message)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.UserEmail)</td>
                <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                <td>@Html.DisplayFor(modelItem => item.Message)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ContactId">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ContactId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ContactId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>