@model KhumaloCraft_Part2.Models.Contact

@{
    ViewData["Title"] = "Contact us";
}
<style>
    .button {
        border-color: darkorange;
        color: #F96D00;
        background-color: white;
        padding: 8px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
    }

    .column {
        float: left;
        width: 29.3%;
        margin-bottom: 16px;
        padding: 0 8px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        margin: 8px;
        background-color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 16px;
    }

    .formcard {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        margin: 8px;
        background-color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        border-radius: 8px;
        width: 100%;
        max-width: 800px;
        background-color: #F9B47A;
    }

    .container {
        padding: 0 16px;
        text-align: center;
    }

        .container::after, .row::after {
            content: "";
            clear: both;
            display: table;
        }

    .contact-form {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        color: white;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
        width: 100%;
    }

        .form-group label,
        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group textarea,
        .form-group span {
            width: 100%;
            display: block; /* Ensure elements take up full width */
        }

        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group textarea {
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box; 
            width: 660px;
        }


    hr {
        border: none;
        height: 4px;
        width: 100%;
        color: white;
    }

    .form-group input[type="submit"] {
        width: auto;
        padding: 10px 20px;
        background-color: #F96D00;
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        font-size: 16px;
    }
</style>

<h1 style="color: #F96D00;">@ViewData["Title"]</h1>
<p>If you require additional information or would like to send feedback please contact us using the following contact information:</p>

<div class="row">
    <div class="column">
        <div class="card">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRFZfokCi68M-JUbHF-9BtbiBvTJwrSiYiD-Q&usqp=CAU" style="width:50%;">
            <div class="container">
                <h4>Email</h4>
                <p>Contact@KhumaloCraft.com</p>
            </div>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <img src="https://static.vecteezy.com/system/resources/previews/005/241/132/original/phone-icon-telephone-icon-symbol-for-app-and-messenger-free-vector.jpg" style="width:50%;">
            <div class="container">
                <h4>Phone Number</h4>
                <p>+27317413129</p>
            </div>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <img src="https://static.thenounproject.com/png/2340040-200.png" style="width:50%;">
            <div class="container">
                <h4>Address</h4>
                <p>3 Quail Cl, Prestondale, uMhlanga, 4320</p>
            </div>
        </div>
    </div>
</div>
<hr style="color: darkorange; height:5px" />
<div class="contact-form">
    <div class="formcard">
        <h2 style=" color: white;">Get in touch!</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="UserName" class="form-control" type="text" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="UserEmail" class="form-control" type="email" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Subject:</label>
                <input asp-for="Subject" class="form-control" type="text" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Message:</label>
                <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Message" class="button" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
