@model KhumaloCraft_Part2.Models.Delivery

@{
    ViewData["Title"] = "Order Confirmation";
}

<font color="#F96D00"><h2>Order Confirmation</h2></font>

<p>Thank you for your order, @Model.FullName!</p>

<div class="delivery-container">
    <div>
        <font color="#F96D00"><h4>Delivery Address:</h4></font>
        <p>Address: @Model.Address</p>
        <p>City: @Model.City</p>
        <p>PostalCode: @Model.PostalCode</p>
        <p>Country: @Model.Country</p>
    </div>

    <div>
        <font color="#F96D00"><h4>Order Details:</h4></font>
            @foreach (var order in Model.OrderHistories)
            {
                foreach (var product in order.Products)
                {
                    <p>Name: @product.Name </p>
                    <p>Price: R @product.Price</p>
                    <p>Quantity: 1</p>
                }
            }
    </div>

    <div class="image-container">
        <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/e93232ed-631c-4406-8f2e-afd80402d397/d3a0jnv-ada684ba-5aa7-4146-bb4b-99c37270a644.png/v1/fill/w_900,h_896/vault_boy_by_craig_38_d3a0jnv-fullview.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..M-3HiU8SnlxmQS09lfL1bXT9aq-TBZardesBOEOdTv8" width="390" height="390">
    </div>
</div>

<style>
    .delivery-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

        .delivery-container > div {
            flex: 1;
            margin-right: 20px;
        }

    .image-container {
        flex-shrink: 0; 
    }
</style>
