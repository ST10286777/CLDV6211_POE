@model KhumaloCraft_Part2.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    .button {
        border: none;
        color: white;
        background-color: #F96D00;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
    }

    .main {
        background-color: peachpuff;
        color: black;
        margin: 20px auto;
        padding: 20px;
        border-radius: 25px;
        width: 680px;
        box-sizing: border-box;
    }

    .product-image {
        float: left;
        margin-bottom: 20px;
    }

        .product-image img {
            max-width: 200px;
            max-height: 200px;
            display: block;
            margin: 0 auto;
        }

    .product-info {
        margin-left: 20px;
        overflow: hidden;
        padding-left: 15px;
    }

        .product-info h4 {
            margin-top: 0;
        }

    .clear {
        clear: both;
    }

    .buttons {
        text-align: center;
        margin-top: 20px;
    }
</style>


<h1 style="color: #F96D00; text-align: center;">Delete</h1>
<p>Are you sure you want to delete this product?</p>
<div class="main">
    <div class="product-image">
        <img src="@Model.ImageUrl" alt="@Model.Name" />
    </div>

    <div class="product-info">
        <h4>@Model.Name</h4>
        <hr />
        <p>
            <strong>Price:</strong> R @Model.Price <br />
            <strong>Category:</strong> @Model.Category <br />
            <strong>Quantity:</strong> @Model.Quantity <br />
            <strong>Description:</strong> @Model.Description<br />
        </p>
    </div>
    <div class="clear"></div>
</div>

<div class="buttons">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="button" />
        <a asp-action="MyWork" class="button">Back to List</a>
    </form>
</div>

